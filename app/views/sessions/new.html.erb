<% provide :title, "Sign in" %>
<h1>Sign in</h1>

<%= #form_for(:session, url: sessions_path) do |f|
    form_tag(sessions_path) do
%>
    <div class="field">
      <%= label_tag :email, "Email" #f.label :email
      %><br />
      <%= text_field_tag(:email) #f.text_field :email
      %>
    </div>
    <div class="field">
      <%= label_tag :password, "Password" #f.label :password
      %><br />
      <%= password_field_tag(:password) #f.password_field :password
      %>
    </div>
    <div class="actions">
      <%= submit_tag("Sign in") #f.submit "Sign in"
      %>
    </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
